@using Cyber_Ramon.Models;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>@ViewBag.Title</title>

    <!-- JQUERY CDN -->
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>-->
    <!-- JQUERY MOBILE CDN -->
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>

    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <style type="text/css" media="screen and (max-width:700px)">
        .LoginBox {
            width: 80%;
            padding: 5%;
            border: 4px outset;
            margin-top: 3%;
        }

        .txt {
            text-align: center !important;
            width: 100%;
        }

        [data-role=page] {
            height: 100% !important;
            position: relative !important;
        }

        [data-role=footer] {
            width: 100%;
        }
        .MenuElement{
            width: 100% !important;
        }
        .MenuTitle {
        font-size: 25px;
        margin-top: 5%;
        }
        .ui-body {
        overflow: scroll;
        padding-bottom: 20%;
        padding-top: 10%;
        height: 100%;
        background-image: linear-gradient(lightsteelblue, beige); /* Standard syntax (must be last) */
        }
        .MenuPanel {
        position:fixed !important;
        overflow:scroll !important;
        height: 100%;
        }
        .SoloLectura {
            user-select: none !important;
            background-color: lightgray !important;
        }
    </style>

</head>
<body>

    


    <div data-theme="a" data-role="page" id="page1">

        <!-- PANEL -->
        <div class="MenuPanel" data-theme="b" data-role="panel" id="overlayPanel" data-display="overlay">
            <div data-role="header" class="ui-header">
                <h2>Menu</h2>
            </div>
            @if (ViewBag.PermisoCaja > 0 ) {
        <fieldset data-role="controlgroup">
            <span class="MenuTitle MenuElement badge badge-primary">Caja</span>
            <a href="../home/caja" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Registrar dia</a>

            @if (ViewBag.PermisoCaja == 2)
            {
                <a href="#" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Opcion #2</a>
            }
            @if (ViewBag.PermisoCaja == 3) { 
                <a href="#" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Opcion #3</a>
            }
        </fieldset>
            }
            

            @if (ViewBag.PermisoEmpleados > 0)
            {
            <fieldset data-role="controlgroup">
                <span class="MenuTitle MenuElement badge badge-primary">Empleados</span>
                <a href="#" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Ver todos</a>
                <a href="#" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Nuevo</a>
                <a href="#" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a">Opcion #3</a>
            </fieldset>
            }

            <a href="#page1" style="margin-top: 10%" data-rel="close" class="MenuElement ui-btn ui-btn-inline ui-shadow ui-corner-all ui-btn-a ui-icon-delete ui-btn-icon-left">Cerrar</a>
        </div>
        <!-- PANEL -->


        <div data-role="header"  data-fullscreen="true" data-position="fixed" data-theme="b" class="ui-header ui-bar-a">
            <a href="#overlayPanel" data-icon="bars">Menu</a>
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="ui-body">
            <!-- Contenido -->

            @RenderBody()

            <!-- Contenido -->
        </div>
        <div data-theme="b"  data-fullscreen="true" data-position="fixed" data-role="footer">
            <div align="center" data-role="controlgroup" data-type="horizontal">
                <a href="../home/salir" data-role="button" data-inline="true">Salir</a><a href="../home/index" data-role="button" data-inline="true">Inicio</a><a href="#" data-role="button" data-inline="true">Button</a>
            </div><!-- /controlgroup -->
        </div>
    </div>



</body>
</html>
